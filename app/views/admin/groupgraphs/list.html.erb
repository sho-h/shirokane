<%= render 'admin/common/header' %>
<%= render 'admin/common/sidebar' %>
<!-- administrator main content start -->
<div id="content">
	<h1><%= t('menu_group') %></h1>
	<h2><%= t('title_groupgraphs_index') %>:<%= @group.title %></h2>

<%= form_tag('/admin/groupgraphs') do |f| %>
<table class="coder">
  <thead>
    <tr>
      <th><%= t('title_select') %></th>
      <th><%= t('title_graph') %></th>
    </tr>
  </thead>

  <tbody>
  	<%= hidden_field_tag :groupid,@group.id %>
    <% @graph.each do |g| %>
      <tr>
        <td><%= check_box 'groupgraph', g.id,{:checked => @ghash[g.id]}, 1, false %></td>
        <td><%= g.title %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>
<br />
<p><%= submit_tag t('title_select')%></p>
<% end %>
<br />

<%= link_to t('title_back'), admin_groups_path %>

</div><!-- administrator main content end -->
<%= render 'admin/common/footer' %>