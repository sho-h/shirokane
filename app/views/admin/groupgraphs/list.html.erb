<%= render 'admin/common/header' %>
<%= render 'admin/common/sidebar' %>
<!-- administrator main content start -->
<div id="content">
<div id="sub_content">
	<h1><%= t('menu_group') %> &nbsp;-&nbsp;<%= t('title_groupgraphs_list') %>:<%= @group.title %></h1>
</div>
<div id="setting">
<%= form_tag(admin_groupgraphs_path) do |f| %>
<%= hidden_field_tag :group_id,@group.id %>
<table class="coder">
  <thead>
    <tr>
      <th><%= t('title_select') %></th>
      <th><%= t('title_graph') %></th>
      <th><%= t('title_dashboard') %></th>
      <th><%= t('title_rank') %></th>
    </tr>
  </thead>

  <tbody>
  	
    <% @graph.each do |g| %>
      <tr>
        <td><%= check_box 'groupgraph', g.id,{:checked => @gcheck[g.id]}, 1, false %></td>
        <td><%= g.title %></td>
        <td><%= check_box 'dashboard', g.id,{:checked => @ghash[g.id].dashboard}, 1, false %></td>
        <td><%= number_field_tag 'view_rank' + g.id.to_s,@ghash[g.id].view_rank,{:min => 0,:max => 99,:size => 2} %></td>
    <% end %>
    
  </tbody>
</table>
<br />
<div class="actions">
	<%= submit_tag t('helpers.submit.update'),:class=>"button" %>
</div>
<% end %>
</div>

<%= link_to t('title_back'), admin_groups_path,:class=>"button_link" %>

</div><!-- administrator main content end -->
<%= render 'admin/common/footer' %>