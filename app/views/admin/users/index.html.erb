<%= render 'admin/common/header' %>
<%= render 'admin/common/sidebar' %>
<!-- administrator main content start -->
<div id="admin_content">
<div id="admin_sub_content">
	
	<h1><%= t('menu_user') %></h1>
	<h2><%= t('title_list') %></h2>
	<table class="coder">
	  <thead>
	    <tr>
	      <th><%= t('title_user_name') %></th>
	      <th><%= t('title_user_title') %></th>
	      <th><%= t('title_group_name') %></th>
	      <th><%= t('title_user_admin') %></th>
	      <th></th>
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @admin_users.each do |admin_user| %>
	      <tr>
	        <td><%= link_to admin_user.name, edit_admin_user_path(admin_user) %></td>
	        <td><%= admin_user.title %></td>
	        <td><%= admin_user.group.title %></td>
	        <td><%= admin_user.admin %></td>
	        <td><%= link_to t('title_delete'), admin_user, method: :delete, data: { confirm: t('message_delete') } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

<br>

<%= link_to t('title_new'), new_admin_user_path %>

</div>
</div><!-- administrator main content end -->
<%= render 'admin/common/footer' %>