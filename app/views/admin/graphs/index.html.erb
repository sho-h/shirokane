<%= render 'admin/common/header' %>
<%= render 'admin/common/sidebar' %>
<!-- administrator main content start -->
<div id="content">
	<h1><%= t('menu_graph') %></h1>
	<h2><%= t('title_list') %></h2>

<table class="coder">
  <thead>
    <tr>
      <th><%= t('title_graph_name') %></th>
      <th><%= t('title_graph_title') %></th>
      <th><%= t('title_graph_gtype') %></th>
      <th><%= t('title_graph_term') %></th>
      <th><%= t('title_graph_x') %></th>
      <th><%= t('title_graph_y') %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_graphs.each do |admin_graph| %>
      <tr>
        <td><%= link_to admin_graph.name, edit_admin_graph_path(admin_graph) %></td>
        <td><%= admin_graph.title %></td>
        <td><%= @h_gtypes[admin_graph.gtype] %></td>
        <td><%= @h_terms[admin_graph.term] %></td>
        <td><%= admin_graph.x %></td>
        <td><%= admin_graph.y %></td>
        <td><%= link_to t('title_delete'), admin_graph, method: :delete, data: { confirm: t('message_delete') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('title_new'), new_admin_graph_path %>

</div><!-- administrator main content end -->
<%= render 'admin/common/footer' %>