<%= render 'admin/common/header' %>
<%= render 'admin/common/sidebar' %>
<!-- administrator main content start -->
<div id="content">
<div id="sub_content">
	<h1><%= t('menu_graph') %></h1>
</div>
<table class="coder">
  <thead>
    <tr>
      <th><%= t('title_graph_name') %></th>
      <th><%= t('title_graph_title') %></th>
      <th><%= t('title_graph_analysis_type') %></th>
      <th><%= t('title_graph_graph_type') %></th>
      <th><%= t('title_graph_term') %></th>
      <th><%= t('title_graph_y') %></th>
      <!--
      <th><%= t('title_graph_y_min') %></th>
      <th><%= t('title_graph_y_max_time') %></th>
      <th><%= t('title_graph_y_max_day') %></th>
      <th><%= t('title_graph_y_max_month') %></th>
      <th><%= t('title_graph_useval') %></th>
      <th><%= t('title_graph_useshadow') %></th>
      <th><%= t('title_graph_usetip') %></th>
      <th><%= t('title_graph_usepredata') %></th>
      <th><%= t('title_graph_uselastyeardata') %></th>
      <th><%= t('title_graph_linewidth') %></th>-->
      <th><%= t('title_graph_template') %></th>
      <% if Admin::Graph.get_use_merge_graph %>
      <th><%= t('title_graph_merge_graph') %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @admin_graphs.each do |admin_graph| %>
      <tr>
        <td><%= link_to admin_graph.name, edit_admin_graph_path(admin_graph) %></td>
        <td><%= admin_graph.title %></td>
        <td><%= @graph_settings[:h_analysis_types][admin_graph.analysis_type] %></td>
        <td><%= @graph_settings[:h_graph_types][admin_graph.graph_type] %></td>
        <td><%= @graph_settings[:h_terms][admin_graph.term] %></td>
        <td><%= admin_graph.y %></td>
        <!--
        <td><%= admin_graph.y_min %></td>
        <td><%= admin_graph.y_max_time %></td>
        <td><%= admin_graph.y_max_day %></td>
        <td><%= admin_graph.y_max_month %></td>
        <td><%= @graph_settings[:h_yesno][admin_graph.useval] %></td>
        <td><%= @graph_settings[:h_yesno][admin_graph.useshadow] %></td>
        <td><%= @graph_settings[:h_yesno][admin_graph.usetip] %></td>
        <td><%= @graph_settings[:h_yesno][admin_graph.usepredata] %></td>
        <td><%= @graph_settings[:h_yesno][admin_graph.uselastyeardata] %></td>
        <td><%= admin_graph.linewidth %></td>-->
        <td><%= admin_graph.template %></td>
        <% if @merge %>
        <td><%= admin_graph.merge_graph %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br />
<% if Admin::Graph.get_use_create_graph %>
<%= link_to t('title_new'), new_admin_graph_path,:class=>"button_link" %>
<% end %>

</div><!-- administrator main content end -->
<%= render 'admin/common/footer' %>
