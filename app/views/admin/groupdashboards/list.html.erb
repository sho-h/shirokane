<%= render 'admin/common/header' %>
<%= render 'admin/common/sidebar' %>
<!-- administrator main content start -->
<div id="admin_content">
<div id="admin_sub_content">
	<h1><%= t('menu_group') %></h1>
	<h2><%= t('title_groupdashboards_list') %>:<%= @group.title %></h2>

<%= form_tag(admin_groupdashboards_path) do |f| %>
<%= hidden_field_tag :group_id,@group.id %>

<table class="coder">
  <thead>
    <tr>
      <th><%= t('title_rank') %></th>
      <th><%= t('title_graph') %></th>
    </tr>
  </thead>

  <tbody>
  	
    <% for rank in 1..4 do %>
        <td><%= rank %></td>
        <td><%= collection_select('graphs',rank,@graph, :id, :title,{:include_blank => t('message_select_blank'),:selected => @hrank[rank]}) %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>
<br />
<p><%= submit_tag t('title_edit')%></p>
<% end %>
<br />

<%= link_to t('title_back'), admin_groups_path %>
</div>
</div><!-- administrator main content end -->
<%= render 'admin/common/footer' %>