<%= render 'common/header' %>
<%= render 'common/sidebar' %>
<!-- main content start -->
<div id="content">
<div id="sub_content">
	<h1><%= Time.now().strftime('%Y/%m/%d %X') %></h1>
	<div id="dashboards">
<% index = 1 %>
<% @dashboards.each do |ddd| %>
  <% if @graphs[ddd.graph_id] then%>
    <div id="dashboard">
    	<h2><%= @graphs[ddd.graph_id].title %>:<%= @h_analysis_types[@graphs[ddd.graph_id].analysis_type] %></h2>
    	<h3><%= @terms[ddd.graph_id] %></h3>
		<a href="<%= graph_path(@graphs[ddd.graph_id].id) %>"><canvas id="<%= @graphs[ddd.graph_id].name %>"></canvas></a>
	</div>
	
	<script>
	var chartdata = {
	
	  "config": {
	  	"width": 300,
	  	"height": 200,
	  	"onlyChart":"yes",
	    /*"title": "title",*/
	    /*"subTitle": "subTitle",*/
	    "type": "<%= @graph_types[@graphs[ddd.graph_id].graph_type] %>",
	    "useVal": "<%= @h_yesno[@graphs[ddd.graph_id].useval] %>",
	    "useShadow": "<%= @h_yesno[@template[ddd.graph_id].useshadow] %>",
	    "lineWidth": <%= @graphs[ddd.graph_id].linewidth %>,
	    "colorSet": 
	          ["<%= @template[ddd.graph_id].linecolor %>"],
	    "bgGradient": {
	            "direction":"vertical",
	            "from":"<%= @template[ddd.graph_id].bgfrom %>",
	            "to":"<%= @template[ddd.graph_id].bgto %>"
	         },
	    "textColor": "<%= @template[ddd.graph_id].textcolor %>",
	    "useFirstToColName":false,
	    "useFirstToRowName":false,
	    "minY":0
	  },
	
	  "data": [
	    [<%= @xdatas[ddd.graph_id] %>],
	    [<%= @ydatas[ddd.graph_id] %>]
	  ]
	};
	ccchart.init('<%= @graphs[ddd.graph_id].name %>', chartdata)
	</script>
	<% if index%@gconf['dashboardnum'].to_i == 0 then %>
	<div class="space"></div>
	<% end %>
	<% index += 1 %>
	<% end %>
<% end %>
</div>
</div>
</div><!-- main content end -->
<%= render 'common/footer' %>